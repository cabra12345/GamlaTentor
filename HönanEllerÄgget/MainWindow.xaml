<Window
    x:Class="HönanEllerÄgget.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HönanEllerÄgget"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            x:Name="txtBlockSvar"
            Margin="200,308,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Svar"
            TextWrapping="Wrap" />
        <Button
            x:Name="btnBeräkna"
            Margin="198,262,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnBeräkna_Click"
            Content="Beräkna" />
        <TextBox
            x:Name="txtBoxSkriv"
            Width="120"
            Margin="200,220,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Skriv här"
            TextWrapping="Wrap" />
        <Button
            x:Name="btnTrasigaÄgg"
            Margin="270,263,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnTrasigaÄgg_Click"
            Content="Trasiga" />
        <Button
            x:Name="btnÄggröra"
            Margin="337,263,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnÄggröra_Click"
            Content="Äggröra" />

    </Grid>
</Window>
